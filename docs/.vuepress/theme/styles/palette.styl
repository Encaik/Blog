$accentColor = #f33b1f    //默认主题颜色
$textColor = #363433    //默认字体颜色
$borderColor = #dad4cb  //默认边框颜色
$codeBgColor = #22202e    //默认背景颜色

/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar
{
  width: 8px;
  height: 8px;
  border-radius: 10px;
  background-color: $borderColor;
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track
{
  border-radius: 10px;
  //-webkit-box-shadow: inset 0 0 6px $codeBgColor;
  background-color: $borderColor;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb
{
  border-radius: 10px;
  //-webkit-box-shadow: inset 0 0 6px $codeBgColor;
  border-radius: 10px;
  background-color: $accentColor;
  transition: 0.3s ease-in-out;
}

/*定义滑块悬浮样式*/
::-webkit-scrollbar-thumb:hover{
  background-color: $accentColor;
  transition: 0.3s ease-in-out;
}

*::selection {
  color: white;
  background-color: $accentColor;
}

